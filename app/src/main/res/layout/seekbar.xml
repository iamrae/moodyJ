<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
    >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:text="신나는"
        android:textSize="14sp"
        android:paddingLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/Funny_tv"/>
   <SeekBar
       android:layout_width="180dp"
       app:layout_constraintTop_toTopOf="@id/Funny_tv"
       app:layout_constraintRight_toRightOf="parent"
       android:id="@+id/FunnyGloomy_bar"
       android:thumb="@drawable/gradient"
       android:foregroundGravity="center"
       android:progress="50"
       android:progressDrawable="@drawable/spinner"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_height="match_parent" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="우울한"
        android:paddingRight="30dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:id="@+id/Gloomy_tv"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentRight="true"
        />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:text="부드러운"
            android:textSize="14sp"
            android:paddingLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/Soft_tv"/>
        <SeekBar
            android:layout_width="180dp"
            android:thumb="@drawable/gradient"
            app:layout_constraintTop_toTopOf="@id/Soft_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/SoftRough_bar"
            android:progressDrawable="@drawable/spinner"
           android:progress="50"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="거친"
            android:paddingRight="30dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:id="@+id/Rough_tv"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentRight="true"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:text="템포"
            android:textSize="14sp"
            android:paddingLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/Tempo_tv"/>
        <SeekBar
            android:layout_width="180dp"
            app:layout_constraintTop_toTopOf="@id/Tempo_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/Tempo_bar"
            android:thumb="@drawable/gradient"
            android:progress="50"
            android:progressDrawable="@drawable/spinner"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="match_parent" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/buttonSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
